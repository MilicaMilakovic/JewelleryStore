<Window x:Class="JewelleryStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelleryStore"
        mc:Ignorable="d"
    Title="MainWindow" Height="650" Width="1024"
        WindowStartupLocation="CenterScreen"
     
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent">

    <Border Background="WhiteSmoke" CornerRadius="10">

        <Grid ShowGridLines="False">

            <Grid.ColumnDefinitions>
                <!-- Left panel-->
                <ColumnDefinition Width="80"/>
                <!--Main panel-->
                <ColumnDefinition Width="223*" />
                <!--Slideshow panel-->
                <ColumnDefinition Width="209*"/>
                <!--Right panel-->
                <ColumnDefinition Width="80"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="36"/>
                <RowDefinition Height="34" />
                <RowDefinition Height="90" />
                <RowDefinition />
                <RowDefinition Height="58" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="3" Background="WhiteSmoke">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="160*"/>
                    <ColumnDefinition Width="185*"/>
                    <ColumnDefinition Width="185*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="170*"/>
                    <RowDefinition Height="171*"/>
                    <RowDefinition Height="171"/>
                </Grid.RowDefinitions>

                <ScrollBar Grid.Column="3" Margin="158,-10,0,0" Grid.RowSpan="3" Width="Auto"></ScrollBar>

                <Canvas  Grid.Row="0" Grid.Column="1" Margin="5,5,5,0" Background="WhiteSmoke">
                    <Image HorizontalAlignment="Center" Source="/images/1.jpg" Width="130" Height="126" Canvas.Left="6" Canvas.Top="5" />
                    <TextBlock FontSize="10" Canvas.Left="10" Canvas.Top="134" Height="16" Width="121">Air Element Gold Necklace
                    </TextBlock>
                    <TextBlock  FontWeight="DemiBold" Text="80KM" Canvas.Left="52" Canvas.Top="145"/>
                </Canvas>
            </Grid>

            <Image Source="/images/logo.png" Grid.Column="0" Grid.ColumnSpan="2"/>
            <Separator Grid.Column="3" Grid.Row="1" VerticalAlignment="Bottom" Foreground="Beige" Height="5" Margin="0,0,0,2"></Separator>
            <Image Source="/images/mainPhoto.jpg" Grid.Column="2" Grid.Row="0" Grid.RowSpan="6" Stretch="UniformToFill" />

        </Grid>

    </Border>
</Window>

